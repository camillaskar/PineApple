<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/width_button"
        android:minWidth="@dimen/width_button"
        android:layout_alignParentEnd="true"
        android:src = "@drawable/ic_android_black_24dp"
        android:layout_centerVertical="true"

        />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="40dp"
        android:textStyle="italic"
        android:textSize="10sp"
        android:layout_toEndOf="@id/desc"
        android:layout_toStartOf="@id/user_logo"
        tools:text="Andrew, Kuala Lumpur"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="6dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        tools:text="Ok"
        android:layout_alignStart="@id/listitemrating"
        android:layout_marginTop="40dp"


        />

    <RatingBar
        android:id="@+id/listitemrating"
        style="@android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:isIndicator="true"
        android:max="5"
        android:rating="4"
        />

</RelativeLayout>